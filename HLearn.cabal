Name:                HLearn
Version:             2.0.0.0
Synopsis:            Homomorphic machine learning for classification, regression, distributions, etc.
Description:         Homomorphic machine learning description. 
Category:            Data Mining, Machine Learning, Algorithms, Data structures
License:             BSD3
License-file:        LICENSE
Author:              Mike izbicki
Maintainer:          mike@izbicki.me
Build-Type:          Simple
Cabal-Version:       >=1.8
homepage:            http://github.com/mikeizbicki/HLearn/
bug-reports:         http://github.com/mikeizbicki/HLearn/issues

Library
    Build-Depends:      
        -- common dependencies
        base                >= 3 && < 5,
        template-haskell,
        containers          >= 0.5,
        vector              >= 0.10,
        array               >= 0.4,
        
        erf                 >= 2.0,
        gamma               >= 0.9,
        logfloat            >= 0.12,

        -- my packages
        ConstraintKinds     >= 1.1.0,

        -- are these needed?
        statistics          >= 0.10,
        random              >= 1.0.1,
        MonadRandom         >= 0.1,
        parallel            >= 3.2,
        deepseq             >= 1.3,
        hashable            == 1.1.2.5,
        primitive           >= 0.5,
        vector-algorithms   >= 0.5.4,
        vector-th-unbox     >= 0.2,
        list-extras         >= 0.4,
        heap                >= 1.0.0,
        hmatrix             >= 0.15.0.1,
        dlist               >= 0.5,
        split               >= 0.2.2,
        semigroups          >= 0.9,
        memoize             >= 0.6,
        cassava             >= 0.2.2,
        strict              >= 0.3.2,
        normaldistribution  >= 1.1.0.3,
        mtl                 >= 2.1.2,
        
        ghc-prim, 

        -- tests
        QuickCheck          >= 2.6,

        -- visualize

        --diagrams-svg        >= 0.6,
        --diagrams-lib        >= 0.6,
        process             >= 1.1,
        graphviz            >= 2999.16
        
    hs-source-dirs:     
        src

    ghc-options:        
        -rtsopts 
        -threaded
        -fllvm
        -O2
        -funbox-strict-fields
        -auto-all 
        -caf-all 

    Exposed-modules:
