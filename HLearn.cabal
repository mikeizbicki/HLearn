    vector-algorithms   >= 0.5.4,
    vector-th-unbox     >= 0.2,
    list-extras         >= 0.4,
    heap                >= 1.0.0,
    hmatrix             >= 0.15.0.1,
    dlist               >= 0.5,
    split               >= 0.2.2,
    semigroups          >= 0.9,
    normaldistribution  >= 1.1.0.3,

    QuickCheck          >= 2.6,

